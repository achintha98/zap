generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  Password String
}

model Zap {
  id      String   @id @default(uuid())
  trigger Trigger?
  action  Action[]
  zapRun  zapRun[]
}

model Trigger {
  id        String          @id @default(uuid())
  triggerId String
  zapId     String          @unique
  type      AvailabeTrigger @relation(fields: [triggerId], references: [id])
  zap       Zap             @relation(fields: [zapId], references: [id])
}

model AvailabeTrigger {
  id      String    @id @default(uuid())
  name    String
  trigger Trigger[]
}

model Action {
  id       String         @id @default(uuid())
  actionId String
  zapId    String         @unique
  type     AvailabeAction @relation(fields: [actionId], references: [id])
  zap      Zap            @relation(fields: [zapId], references: [id])
}

model AvailabeAction {
  id     String   @id @default(uuid())
  name   String
  action Action[]
}

model zapRun {
  id    String @id @default(uuid())
  zapId String
  zap   Zap    @relation(fields: [zapId], references: [id])
}
